-- 각 게시글에 대한 댓글을 삽입합니다.
INSERT INTO COMMENT (COMMENT_ID, SAMPLE_ID, COMMENT_TEXT) VALUES (1, 'SAMPLE-00001', '이 샘플은 실행 환경을 설정하는 데 사용됩니다.');
