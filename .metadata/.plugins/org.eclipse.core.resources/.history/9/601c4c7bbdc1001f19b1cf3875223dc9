-- SAMPLE 테이블 생성
CREATE MEMORY TABLE SAMPLE (
    ID VARCHAR(16) NOT NULL PRIMARY KEY, -- SAMPLE ID (Primary Key)
    NAME VARCHAR(50),                    -- 이름
    DESCRIPTION VARCHAR(100),            -- 설명
    USE_YN CHAR(1),                      -- 사용 여부 (Y/N)
    REG_USER VARCHAR(10)                 -- 등록자
);

-- IDS 테이블 생성 (자동 증가 ID 관리)
CREATE MEMORY TABLE IDS (
    TABLE_NAME VARCHAR(16) NOT NULL PRIMARY KEY, -- 테이블 이름 (Primary Key)
    NEXT_ID DECIMAL(30) NOT NULL                -- 다음 ID 값
);

-- 기본 스키마 설정
SET SCHEMA PUBLIC;

